<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeisNivel2">

    <ImageView
        android:id="@+id/imgvS5"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imgvS6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgvS3"
        app:srcCompat="@drawable/brasilia" />

    <ImageView
        android:id="@+id/imgvS6"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgvS5"
        app:layout_constraintTop_toBottomOf="@+id/imgvS4"
        app:srcCompat="@drawable/brasilia" />

    <TextView
        android:id="@+id/tvSeisnivel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgvS1"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imgvS2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brasilia" />

    <ImageView
        android:id="@+id/imgvS2"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgvS1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brasilia" />

    <ImageView
        android:id="@+id/imgvS3"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imgvS4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgvS1"
        app:srcCompat="@drawable/brasilia" />

    <ImageView
        android:id="@+id/imgvS4"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgvS3"
        app:layout_constraintTop_toBottomOf="@+id/imgvS2"
        app:srcCompat="@drawable/brasilia" />

</android.support.constraint.ConstraintLayout>