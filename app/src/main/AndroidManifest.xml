<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.allan.capitales">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Nivel1"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Multiple"
            android:parentActivityName=".gameOver"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Nivel2"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SeisNivel1"
            android:parentActivityName=".Nivel1"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".JuegoTiempoNivel1"
            android:parentActivityName=".Nivel1"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MapaNivel1"
            android:parentActivityName=".Nivel1"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MultipleNivel2"
            android:parentActivityName=".Nivel2"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SeisNivel2"
            android:parentActivityName=".Nivel2"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TiempoNivel2"
            android:parentActivityName=".Nivel2"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MapaNivel2"
            android:parentActivityName=".Nivel2"
            android:screenOrientation="portrait"/>
        <activity android:name=".gameOver"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>